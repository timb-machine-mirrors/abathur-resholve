Subject: [PATCH] add barebones setup.py and MANIFEST.in

---
 setup.py | 25 ++++++++++++++++++++++++
 1 file changed, 25 insertions(+)
 create mode 100644 setup.py

diff --git a/setup.py b/setup.py
new file mode 100644
index 00000000..ed7189af
--- /dev/null
+++ b/setup.py
@@ -0,0 +1,25 @@
+#!/usr/bin/env python2
+from setuptools import setup, find_packages, Extension
+
+posix_ = Extension("posix_", sources=["source/native/posixmodule.c"])
+line_input = Extension(
+    "line_input",
+    sources=["source/native/line_input.c"],
+    undef_macros=["NDEBUG"],
+    libraries=["readline"],
+)
+fastlex = Extension("fastlex", sources=["source/native/fastlex.c"], undef_macros=["NDEBUG"])
+libc = Extension("libc", sources=["source/native/libc.c"], undef_macros=["NDEBUG"])
+
+setup(
+    name="oil",
+    version="0.8",
+    description="A new unix shell",
+    package_dir={"oil": "source"},
+    packages=["oil"],
+    include_package_data=True,
+    # For posix_methods.def
+    include_dirs=["source/build/oil-defs", "source/_devbuild/gen"],  # posix_ & fastlex
+    ext_modules=[posix_, line_input, fastlex, libc],
+    scripts=["source/bin/oil.py", "source/bin/osh_eval.py", "source/bin/osh_parse.py"],
+)
